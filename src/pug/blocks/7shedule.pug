.shedule
  .container
    +title('Содержание интенсива')
    ul.shedule__list
      each val in lessons
        li.shedule__item.active
          .shedule__item-header
            h3.shedule__header-title.title= val.title
            .shedule__header-dates
              .shedule__date.shedule__header-item
                svg.shedule__date-icon
                  use(xlink:href="./img/sprite.svg#calendar")
                span= val.date
              .shedule__time.shedule__header-item
                svg.shedule__time-icon
                  use(xlink:href="./img/sprite.svg#history")
                span= val.time
            .shedule__toggle
              svg.shedule__toggle-icon
                use(xlink:href="./img/sprite.svg#arrow")
          ul.inner__list
            each item in val.topics
              li.inner__list-item
                p.inner__list-title= item
